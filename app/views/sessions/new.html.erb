<html>
<h1>Sign in</h1>
  <body>
    <div class="container col-md-8 order-md-1">
    <%= form_tag url_for(action: 'create'), method: "post" do %>
    <div class="form-group">
        <%= label_tag 'Email:' %>
        <%= text_field_tag 'email', @user.email, class: "form-control" %>
        <br />
    </div>
    <div class="form">
        <%= label_tag 'Password' %>
        <%= password_field_tag 'password', @user.password, class: "form-control"%>
        <br />
        <center>
        <%= submit_tag "Sign in", class: "btn btn-primary" %>
    </div>
    <% end %>
    <br />
  </div>
  </body>
</html>
